{
  "tslint.enable": true,
  "prettier.eslintIntegration": true,
  "prettier.tabWidth": 2,
  "editor.rulers": [120],
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.alwaysShowStatus": true,
  "[handlebars]": { "editor.formatOnSave": false }
}
